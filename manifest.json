{
    "manifest_version": 2,
    "name": "Weather New Tab",
    "version": "0.1",
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup.html",
        "default_title": "Choose location for weather forecast"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "geolocation"
    ],

    "icons": {
 
        "48": "icons/icon48.png"
    }
}